<script>
    function toggleDetails(item) {
        const details = item.querySelector('.details');
        const toggleText = item.querySelector('.toggle-text');

        if (details) {
            if (details.style.display === 'none') {
                details.style.display = 'block'; // Muestra los detalles
                toggleText.textContent = 'Ver menos'; // Cambia el texto a "Ver menos"
            } else {
                details.style.display = 'none'; // Oculta los detalles
                toggleText.textContent = 'Ver más'; // Cambia el texto a "Ver más"
            }
        }
    }
</script>

